/* pages/home/home.wxss */
.home {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 24rpx;
}
.home .total-income {
  position: relative;
  width: 100%;
  height: 500rpx;
  border-radius: 40rpx;
  background-color: #5377ff;
}
.home .total-income .tabs {
  position: absolute;
  top: 30rpx;
}
.home .total-income .tabs .tab {
  margin: 0 20rpx;
  color: #fff;
}
